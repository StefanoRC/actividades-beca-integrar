---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
  <div class="menu__container">
    <div class="menu__logo">
      <a href="#">
        <h1>Ejercicios Clase 13</h1>
      </a>
    </div>
    <div class="menu__nav">
      <nav id="menu" class="menu">
        <ul>
          <li><a href="#">Home</a></li>
          <li><a href="#">Gallery</a></li>
          <li><a href="#">Users</a></li>
          <li><a href="#">Contact</a></li>
        </ul>
      </nav>
    </div>
    <button class="hamburger" id="hamburger-btn">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</MainLayout>

<style>
  .menu__container {
    background-color: rgb(56, 37, 90);
    display: grid;
    grid-template-columns: 1fr 3fr;
  }

  .menu__logo {
    padding: 1rem;
    font-size: 18px;
    justify-self: center;
  }

  .menu__nav {
    padding-right: 3rem;
    align-self: center;
  }

  .menu ul {
    gap: 1rem;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    justify-self: end;
    text-align: center;
  }

  .hamburger {
    display: none;
    grid-template-rows: repeat(3, 1fr);
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: none;
    border: none;
    gap: 6px;
    cursor: pointer;
  }

  .hamburger span {
    display: block;
    height: 4px;
    width: 28px;
    background: #fff;
    border-radius: 2px;
  }

  @keyframes animation-desktop {
    0% {
      transform: scale(1);
    }
    50% {
      transform: rotate(7deg) scale(1.2);
    }
    100% {
      transform: scale(1);
    }
  }

  @keyframes animation-tablet {
    0% {
      border: solid black;
    }
    50% {
      transform: scale(1.2);
      border: solid black;
    }
    100% {
      border: solid black;
    }
  }

  @keyframes animation-phone {
    0% {
      opacity: 0;
    }
    50% {
      opacity: 50;
    }
    100% {
      opacity: 100;
    }
  }

  @keyframes animation-phone-exit {
    0% {
      opacity: 100;
    }
    50% {
      opacity: 50;
    }
    100% {
      opacity: 0;
    }
  }

  @media (min-width: 1000px) and (max-width: 1920px) {
    .hamburger span {
      display: none;
    }
    .menu li:hover {
      animation: animation-desktop 1.5s ease-in-out infinite;
    }
  }

  @media (min-width: 845px) and (max-width: 1000px) {
    .menu ul {
      grid-template-columns: repeat(2, 1fr);
    }

    .menu li:hover {
      animation: animation-tablet 2s ease-in infinite;
    }

    .menu {
      display: block;
    }

    .hamburger {
      display: none;
    }
  }

  @media (min-width: 0px) and (max-width: 844px) {
    .menu {
      pointer-events: none;
      opacity: 0;
      transition: opacity 0.4s ease;
    }

    .menu li:hover {
      animation: animation-desktop 1.5s ease-in-out infinite;
    }

    .menu.active {
      pointer-events: auto;
      opacity: 1;
      display: block;
    }

    .hamburger {
      align-self: center;
      display: grid;
      grid-template-rows: repeat(3, 1fr);
      grid-area: 1 / 3;
    }
  }
</style>

<script>
  document
    .getElementById("hamburger-btn")
    .addEventListener("click", function () {
      document.getElementById("menu").classList.toggle("active");
    });
</script>
